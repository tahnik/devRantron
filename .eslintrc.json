{
    "parser": "babel-eslint",
    "extends": "airbnb",
		"indent": ["error", "tab"],
		"env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
      "react/sort-comp": [1, {
          "order": [
            "constructor",
            "lifecycle",
            "everything-else",
            "render"
          ]
        }
      ],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "import/no-dynamic-require": 0
    },
    "settings": {
		"import/resolver": {
			"webpack": {
				"config": "./configs/webpack.dev.config.js"
			}
		}
	}
}
